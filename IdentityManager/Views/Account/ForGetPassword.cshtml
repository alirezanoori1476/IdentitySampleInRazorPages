@model IdentityManager.Models.ForgotPasswordModel;

<h1 class="text-info">Forgot your Password?</h1>

<div class="row">
    <div class="col-ms-8">
        <form asp-controller="Account" asp-action="ForGetPassword" method="post" role="form">
            <h4>Enter your Email Please:</h4>
            <hr />

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success form-control">Log in</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}